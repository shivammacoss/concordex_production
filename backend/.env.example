# ===========================================
# CONCORDEX BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# Environment
NODE_ENV=production
PORT=5000

# ===========================================
# DATABASE (REQUIRED)
# ===========================================
MONGODB_URI=mongodb://localhost:27017/concordex_production

# ===========================================
# JWT AUTHENTICATION (REQUIRED)
# ===========================================
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_STRING
JWT_EXPIRES_IN=24h

# ===========================================
# LP/CORECEN INTEGRATION (REQUIRED FOR A-BOOK)
# ===========================================
# LP API URL - Corecen backend URL
LP_API_URL=https://corecen.yourdomain.com

# LP API Credentials - Get these from Corecen admin panel after creating broker
LP_API_KEY=ck_your_api_key_here
LP_API_SECRET=cs_your_api_secret_here

# WebSocket URL for real-time updates (usually same as LP_API_URL)
CORECEN_WS_URL=https://corecen.yourdomain.com

# Enable/disable LP integration
LP_ENABLED=true

# Platform key for WebSocket authentication
CORECEN_PLATFORM_KEY=your_secure_platform_key

# ===========================================
# CORS (REQUIRED)
# ===========================================
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# ===========================================
# FILE UPLOADS
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ===========================================
# EMAIL (OPTIONAL)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# PAYMENT GATEWAYS (OPTIONAL)
# ===========================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
